<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>Students in Clubs</title>
</head>
<body>
    <h2>Students in Clubs</h2>
    <nav>
        <a href="/">Home</a>
        <a href="/students">Students</a>
        <a href="/instructors">Instructors</a>
        <a href="/classes">Classes</a>
        <a href="/clubs_eas">Clubs</a>
        <a href="/students_in_classes">Students in Classes</a>
        <a href="/students_in_clubs">Students in Clubs</a>
    </nav>
    <table id="students-in-clubs-table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Club ID</th>
                <th>Club Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.student_id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.clubs_eas_id}}</td>
                <td>{{this.club_name}}</td>
                <td class="actions">
                    <a href="/update_student_in_club?students_in_clubs_id={{this.students_in_clubs_id}}" class="update">Edit</a>
                    <a href="#" class="delete" data-student-id="{{this.student_id}}" data-club-id="{{this.clubs_eas_id}}" onclick="deleteStudentFromClub(event, '{{this.students_in_clubs_id}}')">Delete</a>
                    <form action="/delete-student-from-club" method="POST" id="deleteForm" style="display:none;">
                        <input type="hidden" name="student_id" id="deleteStudentId">
                        <input type="hidden" name="clubs_eas_id" id="deleteClubId">
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/add_student_to_club">Add Student to Club</a>
    <script src="js/delete_student_from_club.js"></script>
</body>
</html>
