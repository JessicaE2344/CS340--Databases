<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student to Class</title>
</head>
<body>
    <h1>Add Student to Class</h1>
    <form id="add-student-to-class-form">
        <label for="input-student-id">Student:</label>
        <select id="input-student-id" name="student_id">
            {{#each students}}
            <option value="{{this.student_id}}">{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>

        <label for="input-class-id">Class:</label>
        <select id="input-class-id" name="class_id">
            {{#each classes}}
            <option value="{{this.class_id}}">{{this.class_name}}</option>
            {{/each}}
        </select>

        <button type="submit">Add Student to Class</button>
    </form>

    <a href="/students_in_classes">Back to Students in Classes</a>

    <script src="/js/add_student_to_class.js"></script>
</body>
</html>

