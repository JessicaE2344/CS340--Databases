<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <script src="/js/delete_student_from_class.js"></script>
    <title>Students in Classes</title>
</head>
<body>
    <h2>Students in Classes</h2>
    <nav>
        <a href="/">Home</a>
        <a href="/students">Students</a>
        <a href="/instructors">Instructors</a>
        <a href="/classes">Classes</a>
        <a href="/clubs_eas">Clubs</a>
        <a href="/students_in_classes">Students in Classes</a>
        <a href="/students_in_clubs">Students in Clubs</a>
    </nav>
    <table id="students-in-classes-table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Class ID</th>
                <th>Class Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.student_id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.class_id}}</td>
                <td>{{this.class_name}}</td>
                <td class="actions">
                    <a href="/update_student_in_class?students_in_classes_id={{this.students_in_classes_id}}" class="update">Edit</a>
                    <a href="#" class="delete" data-student-id="{{this.student_id}}" data-class-id="{{this.class_id}}" onclick="deleteStudentFromClass(event, '{{this.students_in_classes_id}}')">Delete</a>
                    <form action="/delete-student-from-class" method="POST" id="deleteForm" style="display:none;">
                        <input type="hidden" name="student_id" id="deleteStudentId">
                        <input type="hidden" name="class_id" id="deleteClassId">
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/add_student_to_class">Add Student to Class</a>
</body>
</html>

